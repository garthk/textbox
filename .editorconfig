# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
binary_next_line = false # -bn
switch_case_indent = true  # -ci
space_redirects = true # -sr
keep_padding = false # -kp
function_next_line = false  # -fn

[*.{cfg,json,toml,yaml,yml}]
indent_size = 2
indent_style = space
